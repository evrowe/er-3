<article>
  <div class="large-12 entry-header">
    {{partial "entry-header"}}
  </div>
  <div class="large-12 entry-excerpt">
    {{{excerpt}}}
  </div>
  <div class="large-12 entry-taxonomy">
    {{#if tags}}
      tagged: {{#each tag in tags}}
        <span class="pill">{{tag}}</span>
      {{/each}}
    {{/if}}
  </div>
</article>
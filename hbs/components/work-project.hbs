<div class="large-4 medium-6 small-12 columns work-item">
  <h4 class="title">{{project.title}}</h4>
  <a class="image" target="_blank" href="{{project.url}}">
    <img src="{{project.image}}">
  </a>
  <div class="info">
    <span><strong>Role:</strong> {{project.roles}}</span>
    <span><strong>URL:</strong> <a href="{{project.url}}" target="_blank">{{project.linkText}}</a></span>
  </div>
</div>